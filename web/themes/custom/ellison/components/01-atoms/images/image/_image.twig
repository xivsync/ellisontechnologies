{% set image_base_class = 'image' %}

{% if image_url %}
  <a href="{{ image_url }}">
{% endif %}
    <img{{ bem(image_base_class, image_modifiers, image_blockname) }}
      {% if image_srcset %}
        srcset="{{ image_srcset }}"
      {% endif %}
      {% if image_sizes %}
        sizes="{{ image_sizes }}"
      {% endif %}
      src="{{ image_src }}"
      alt="{{ image_alt }}"
      {% if image_width %}
        width="{{ image_width }}"
      {% endif %}
      {% if image_height %}
        height="{{ image_height }}"
      {% endif %}
      {% if image_title %}
        title="{{ image_title }}"
      {% endif %}
    />
{% if image_url %}
  </a>
{% endif %}