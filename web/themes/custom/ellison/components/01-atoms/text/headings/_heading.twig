{#
/**
 * Available variables:
 * - heading__level - the header level 1-6 (produces h1, h2, etc.)
 *
 * - base_class - the base class
 * - base__modifiers - array of modifiers to add to the base classname
 * - base__blockname - blockname prepended to the base classname
 *
 * - heading - the content of the heading (typically text)
 * - heading_label: (optional) the label for the heading
 *
 * - url - (optional) the url the heading should poing to
 * - link_attributes - key/value attributes to pass to link
 * - link_base_class - override the link base class
 * - link_modifiers - override the link modifiers
 * - link_blockname - override the link block name (defaults to heading_base_class)
 */
#}

{% set base_class = base_class|default('heading') %}

<h{{ heading__level }} {{ bem(base_class, base__modifiers, base__blockname) }}>
  {% if heading_label %}
    <span class="{{ base_class }}__label">{{ heading_label }}</span>
  {% endif %}
  {% if url %}
    {% include "@atoms/links/link/link.twig" with {
      "link_content": heading,
      "link_url": url,
      "link_attributes": link_attributes,
      "link_base_class": link_base_class,
      "link_modifiers": link_modifiers,
      "link_blockname": link_blockname|default(base_class),
    } %}
  {% else %}
    {{ heading }}
  {% endif %}
</h{{ heading__level }}>
