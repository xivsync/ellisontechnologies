{#
 # Available variables:
 # - slide__base_class - base classname of the wrapper.
 # - slide__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - slide__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 # - slide__extra_classes -- extra classes
 #
 # - slide__image__src - the actual image file location.
 # - slide__image__alt - (optional) the alt text for screen readers and when the image cannot load.
 # - slide__image__output_image_tag - whether to print the picture element or not.
 #
 # - slide__content__base_class - base classname of the copy wrapper - defaults to 'heading'.
 # - slide__content__modifiers - array of modifiers to add to the base classname of the copy wrapper.
 # - slide__content__blockname - blockname prepended to the base classname of the copy wrapper.
 #
 # - slide__heading - the content of the title component.
 # - slide__heading__link - (optional) the url the title should link to. Defaults to slide__link__url.
 # - slide__heading__base_class - base classname of the title component. Defaults to "title".
 # - slide__heading__blockname - blockname to add to the base classname of the title - defaults to slide__base_class.
 # - slide__heading__modifiers - array of modifiers to add to the base classname of the title.
 # - slide__heading__link_base_class - base class to add to the title link - defaults to 'title-link'.
 #
 # - slide__subheading - the content of the subtitle component.
 # - slide__subheading__link - (optional) the url the subtitle should link to.
 # - slide__subheading__base_class - base classname of the subtitle component. Defaults to "subtitle".
 # - slide__subheading__modifiers - array of modifiers to add to the base classname of the subtitle.
 #
 # - slide__body - the content of the body component.
 # - slide__body__base_class - base classname of the body component. Defaults to "body".
 # - slide__body__modifiers - array of modifiers to add to the base classname of the body.
 #
 # - slide__link__text - the content of the link component.
 # - slide__link__url - the url the link should link to.
 # - slide__link__base_class - base classname of the link component. Defaults to "link".
 # - slide__link__blockname - override link blockname. Defaults to slide__base_class.
 # - slide__link__attributes - array of attribute,value pairs for the link attribute.
 # - slide__link__modifiers - array of modifiers to add to the base classname of the link.
 #
 # - slide__button__content - the content of the button component.
 # - slide__button__url - the url the button should link to.
 # - slide__button__base_class - base classname of the button component. Defaults to "button".
 # - slide__button__attributes - array of attribute,value pairs for the button attribute.
 # - slide__button__modifiers - array of modifiers to add to the base classname of the button.
 #}

{%
  set slide__extra_classes = slide__extra_classes|merge([
    background_color | clean_class,
    (background_color) ? 'has-background-color' : '',
    slide__style | clean_class,
    'text__align--' ~ cta_style | clean_class,
  ])
%}

<div {{ bem(slide__base_class, slide__modifiers, slide__blockname, slide__extra_classes) }}>
  
  <div class="slide__inner">

    {# Image #}
    {% if has_image %}
      <div class="slide__image not-prose">{% block slide__img %}{% endblock %}</div>
    {% endif %}

    {# Content #}
    <div class="slide__content prose max-w-none">

      <div class="slide__inner--content">
        {# Header #}
        {% if slide__heading %}
          <div class="slide__header">

            {{ title_prefix }}
            {% include "@atoms/text/headings/_heading.twig" with {
              base_class: slide__heading__base_class|default('heading'),
              modifiers: slide__heading__modifiers,
              blockname: slide__base_class,
              heading__level: 2,
              heading: slide__heading,
              heading_url: slide__heading__link|default(slide__link__url),
              heading_link_base_class: slide__heading__link_base_class|default('heading-link'),
              heading_link_blockname: slide__base_class,
            } %}
            {{ title_suffix }}

            {% if slide__subheading %}
              <div class="slide__content--header-sub">
                {% include "@atoms/text/headings/_heading.twig" with {
                  heading_base_class: slide__subheading__base_class|default('subheading'),
                  heading_modifiers: slide__subheading__modifiers,
                  heading_blockname: slide__base_class,
                  headling__level: 3,
                  heading: slide__subheading,
                  heading_url: slide__subheading__link,
                } %}
              </div>
            {% endif %}

          </div>
        {% endif %}

        {# Body #}
        {% if slide__body | render %}
          <div class="slide__body">
            {{ slide__body }}
          </div>
        {% endif %}

      </div>

      {% if slide__footer | render %}
        <div class="slide__footer">
          {{ slide__footer }}
        </div>
      {% endif %}

      {% if slide__link__url %}
        <div class="slide__cta slide__cta-link">
          {% include "@atoms/links/link/link.twig" with {
            link_base_class: slide__link__base_class|default('link'),
            link_blockname: slide__base_class,
            link_extra_classes: 'button',
            link_attributes: slide__link__attributes,
            link_content: slide__link__content,
            link_url: slide__link__url,
          } %}
        </div>
      {% endif %}

    </div>

  </div>

</div>
