/**
 * Stack Component
 *
 */
#}

{% set attributes = create_attribute() %}

{%
  set classes = [
    'stack',
    spacing ? 'spacing-' ~ spacing | clean_class : 'spacing-default',
    width ? 'width-' ~ width | clean_class : 'width-default',
  ]
%}

<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  <div class="stack__inner">
    {{ component }}
  </div>
</div>