{#
/**
 * @file
 * Default theme implementation for displaying a single search result coming from Search API page.
 *
 * @ingroup themeable
 */
#}


{% embed "@molecules/card/card.twig" with {
  has_image: false,
  prose_setting: 'prose',
  card__heading: title,
  card__body: snippet ? snippet : info,
  card__heading__link: url,
  card__base_class: 'item',
  card__blockname: 'collection',
  card__modifiers: ['result'],
  card__extra_classes: ['display-as-row','item',snippet ? 'snippet' : 'info'],
} %}
  {% block card__img %}{% endblock %}
{% endembed %}
